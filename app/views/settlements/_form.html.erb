<%= form_for(@settlement) do |f| %>
  <div class="form-group">
    <%= f.label(:institution) %>
    <%= f.text_field :institution, 
      { value: "#{@settlement.institution}", class: "form-control", required: true } %>
  </div>

  <div class="form-group">
    <%= f.label(:cross, "IPEDS") %>
    <%= f.text_field :cross, 
      { value: "#{@settlement.cross}", class: "form-control", required: true } %>
  </div>

  <div class="form-group">
    <%= f.label(:settlement_description) %>
    <%= f.text_field :settlement_description, 
      { value: "#{@settlement.settlement_description}", class: "form-control", required: true } %>
  </div>

  <div class="actions">
    <%= link_to "Cancel", csv_files_path, class: "btn btn-default" %>  
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>