<%= render partial: 'introduction', 
    locals: { 
      new_link: true, edit_link: false, 
      list_link: false, destroy_link: false
    } 
%>

<h2><small>Settlement Data</small></h2>

<div class="row">
  <div class="col-xs-12">
    <table class="table table-hover table-condensed table-bordered table-responsive">
      <thead>
        <th>Id</th>
        <th>Institution</th>
        <th>IPEDS</th>
        <th>Settlement Description</th>
        <th colspan="3">Actions</th>
      </thead>
      <tbody>
        <%= render partial: "settlement", collection: @settlements, as: :settlement %>
      </tbody>
    </table>
  </div>
</div>

<div class="row">
  <div class="col-xs-offset-3 col-xs-6">
    <div class="digg_pagination">
      <%= will_paginate @settlements %>
    </div>
  </div>
</div>