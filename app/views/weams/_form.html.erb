<%= form_for(@weam) do |f| %>
  <div class="form-group">
    <%= f.label(:facility_code) %>
    <%= f.text_field :facility_code, 
      { value: "#{@weam.facility_code}", class: "form-control", required: true } %>
  </div>

  <div class="form-group">
    <%= f.label(:institution) %>
    <%= f.text_field :institution, 
      { value: "#{@weam.institution}", class: "form-control", required: true } %>
  </div>

  <div class="form-group">
    <%= f.label(:city) %>
    <%= f.text_field :city, 
      { value: "#{@weam.city}", class: "form-control", required: false } %>
  </div>

  <div class="form-group">
    <%= f.label(:state) %>
     <%= f.select(:state, 
      options_for_select(DS::State.get_as_options, 
      selected: @weam.state), 
      { include_blank: "Select a state" },
      { class: "form-control", required: false }) %>
  </div>

  <div class="form-group">
    <%= f.label(:zip) %>
    <%= f.text_field :zip, 
      { value: "#{@weam.zip}", class: "form-control", required: false } %>
  </div>

  <div class="form-group">
    <%= f.label(:country) %>
    <%= f.text_field :country, 
      { value: "#{@weam.country}", class: "form-control", required: false } %>
  </div>

  <div class="form-group">
    <%= f.label(:bah) %>
    <%= f.text_field :bah, 
      { value: "#{@weam.bah}", class: "form-control", required: false } %>
  </div>

  <div class="form-group">
    <%= f.label(:accredited) %>
    <%= f.select(:accredited, options_for_select([['Yes', true], ['No', false]], 
      selected: @weam.accredited), 
      { include_blank: "Select Yes or No" },
      { class: "form-control", required: false }) %>
  </div>

  <div class="form-group">
    <%= f.label(:poe) %>
    <%= f.select(:poe, options_for_select([['Yes', true], ['No', false]], 
      selected: @weam.poe), 
      { include_blank: "Select Yes or No" },
      { class: "form-control", required: false }) %>
  </div>

  <div class="form-group">
    <%= f.label(:yr) %>
    <%= f.select(:yr, options_for_select([['Yes', true], ['No', false]], 
      selected: @weam.yr), 
      { include_blank: "Select Yes or No" },
      { class: "form-control", required: false }) %>
  </div>

  <div class="form-group">
    <%= f.label(:poo_status) %>
    <%= f.select(:poo_status, 
      options_for_select(['APRVD', 'CREATD', 'SUSP', 'WTHDRN'], 
      selected: @weam.poo_status.try(:upcase)), 
      { include_blank: "Select a Status" },
      { class: "form-control", required: false }) %>
  </div>

  <div class="form-group">
    <%= f.label(:applicable_law_code) %>
    <%= f.select(:applicable_law_code, 
      options_for_select([
        'Educational Institution Is Approved For All Chapters', 
        'Educational Institution Is Approved For All Chapters Except Chapter 31', 
        'Educational Institution Is Approved For All Chapters Except Chapter 35', 
        'Educational Institution Is Approved For Chapter 31 Only',
        'Educational Institution Is Approved For Chapters 30 & 35 Only',
        'Educational Institution Is Approved For Chapters 30, 32, 35 Only',
        'Educational Institution Is Not Approved'
      ], 
      selected: @weam.applicable_law_code.try(:split, ' ').try(:map, &:capitalize).try(:join, ' ')), 
      { include_blank: "Select an Applicable Law Code" },
      { class: "form-control", required: false }) %>
  </div>

  <div class="form-group">
    <%= f.label(:ojt_indicator) %>
    <%= f.select(:ojt_indicator, options_for_select([['Yes', true], ['No', false]], 
      selected: @weam.ojt_indicator), 
      { include_blank: "Select Yes or No" },
      { class: "form-control", required: false }) %>
  </div>

  <div class="form-group">
    <%= f.label(:institution_of_higher_learning_indicator) %>
    <%= f.select(:institution_of_higher_learning_indicator, 
      options_for_select([['Yes', true], ['No', false]], 
      selected: @weam.institution_of_higher_learning_indicator), 
      { include_blank: "Select Yes or No" },
      { class: "form-control", required: false }) %>
  </div>

  <div class="form-group">
    <%= f.label(:correspondence_indicator) %>
    <%= f.select(:correspondence_indicator, options_for_select([['Yes', true], ['No', false]], 
      selected: @weam.correspondence_indicator), 
      { include_blank: "Select Yes or No" },
      { class: "form-control", required: false }) %>
  </div>

  <div class="form-group">
    <%= f.label(:flight_indicator) %>
    <%= f.select(:flight_indicator, options_for_select([['Yes', true], ['No', false]], 
      selected: @weam.flight_indicator), 
      { include_blank: "Select Yes or No" },
      { class: "form-control", required: false }) %>
  </div>


  <div class="form-group">
    <%= f.label(:non_college_degree_indicator) %>
    <%= f.select(:non_college_degree_indicator, 
      options_for_select([['Yes', true], ['No', false]], 
      selected: @weam.non_college_degree_indicator), 
      { include_blank: "Select Yes or No" },
      { class: "form-control", required: false }) %>
  </div>

  <div class="actions">
    <%= link_to "Cancel", csv_files_path, class: "btn btn-default" %>  
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>