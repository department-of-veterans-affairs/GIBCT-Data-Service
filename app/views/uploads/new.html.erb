<div class="row row-space-6" style="padding-bottom: 10px">
  <div class="col-xs-12">
    <%= render partial: 'introduction' %>
  </div>
</div>

<div class="container" style="float: left;">
  <div class="row">
    <div class="col-xs-8">
      <%= render 'form' %>
    </div>
        <% if @requirements&.any? %>
    <div class="col-xs-4">  
      <div class="alert alert-info" role="alert">
        <h4 class="alert-heading"><%= @upload.csv_type.titleize %> File Data Requirements</h4><br />      
          <ol>
            <% @requirements.map do |requirement | %>
              <li>
                <%= requirement[:message] %>
                  <ul>
                    <% requirement[:value].each do |value|  %>
                      <li><%= value.humanize %></li>
                    <% end %>
                  </ul>
              </li>
            <% end %>
          <%end%>

       <% @inclusion.map do |columns | %>
                <%columns.each do |col| %>
                <li> 
                  The <strong><%="\""+col[:message].humanize.downcase+"\""%></strong> column data must be one of these values:
                    <ul>
                      <%col[:value].each do |attributes|%>
                      <li><%=attributes%></li>
                      <%end%>
                    </ul>
                </li>
              <%end%>
            <% end %>
         
         
          <%  @custom_batch_validator.map do |batch| %>
            <li>
              <%= batch[:message] %>
              <ul>
              <% if batch[:value].present?%>
                <% batch[:value].each do |value| %>
                <li><%=value%></li>
                <% end %> 
              <%end%>
              </ul>
            </li>
          <% end %>
        
          </ol>
        </div>
    </div>
  </div>
</div>
