<%= render partial: 'introduction', 
		locals: { new_link: false, edit_link: true, list_link: true } %>

<h2><small>Raw File Source: <%= @raw_file_source.name %></small></h2>

<div class="row">
	<div class="col-xs-2">
		<strong>Id: </strong>
	</div>
	<div class="col-xs-3">
		<%= @raw_file_source.id %>
	</div>
</div>
<div class="row">
	<div class="col-xs-2">
		<strong>Name: </strong>
	</div>
	<div class="col-xs-3">
		<%= @raw_file_source.name %>
	</div>
</div>
<div class="row">
	<div class="col-xs-2">
		<strong>Build Order: </strong>
	</div>
	<div class="col-xs-3">
		<%= @raw_file_source.build_order %>
	</div>
</div>

<div class="row">
	<div class="col-xs-8 section-margin-24">
		<h4><small>CSV File Uploads</small></h4>
		<small>
			<table class="table table-hover table-condensed table-bordered table-responsive">
			<thead>
				<th>Id</th>
				<th>Name</th>
				<th>Uploaded</th>
				<th>Valid</th>
			</thead>
			<tbody>
				<%= render partial: "raw_file",
				 collection: @raw_file_source.raw_files.order(upload_date: :desc),
				 as: :raw_file %>
			</tbody>
		</table>
		</small>
	</div>
</div>