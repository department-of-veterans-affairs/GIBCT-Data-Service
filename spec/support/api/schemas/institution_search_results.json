{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "meta": {
      "type": "object",
      "properties": {
        "count": {
          "type" : "integer"
        },
        "facets": {
          "type": "object"
        },
        "version": {
          "type": "object",
          "properties": {
            "number": {
              "type": "number"
            },
            "created_at": {
              "type": "string"
            },
            "preview": {
              "type": "boolean"
            }
          }
        }
      },
      "required": ["version"]
    },
    "data": {
      "type": "array",
      "items": {
        "type": "object",
        "maxItems": 10,
        "additionalProperties": false,
        "properties": {
          "id": { "type": "string" },
          "type": { "type": "string" },
          "attributes": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "facility_code": { "type": "string" },
              "type": {
                "type": "string",
                "enum": [
                  "OJT",
                  "PRIVATE",
                  "FOREIGN",
                  "CORRESPONDENCE",
                  "FLIGHT",
                  "FOR PROFIT",
                  "PUBLIC"
                ]
              },
              "city": { "type": ["null", "string"] },
              "state": { "type": ["null", "string"] },
              "country": { "type": ["null", "string"] },
              "highest_degree": { "type": ["null", "integer"] },
              "student_count": { "type": ["null", "integer"] },
              "caution_flags": { "type": ["null", "array"] },
              "caution_flag": { "type": ["null", "boolean"] },
              "student_veteran": { "type": ["null", "boolean"] },
              "yr": { "type": ["null", "boolean"] },
              "campus_type": { "type": ["null", "string"] },
              "latitude": { "type": ["null", "number"] },
              "longitude": { "type": ["null", "number"] }
            },
            "required": [
              "name",
              "facility_code",
              "type",
              "city",
              "state",
              "country",
              "highest_degree",
              "student_count",
              "caution_flags",
              "caution_flag",
              "student_veteran",
              "yr",
              "campus_type",
              "latitude",
              "longitude"
            ]
          }
        },
        "required": ["id", "type", "attributes"]
      }
    },
    "links": {
      "type": "object",
      "properties": {
        "self": { "type": "string" },
        "first": { "type": "string" },
        "prev": { "type": ["null", "string"] },
        "next": { "type": ["null", "string"] },
        "last": { "type": "string" }
      },
      "required": ["self", "first", "prev", "next", "last"]
    }
  },
  "required": ["meta", "data"]
}
